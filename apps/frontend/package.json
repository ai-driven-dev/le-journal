{
  "name": "frontend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "remix vite:dev --port 8080",
    "build": "remix vite:build",
    "start": "remix-serve ./build/server/index.js",
    "typecheck": "tsc --noEmit",
